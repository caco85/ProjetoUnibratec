@model PI_INFOX.Models.Basicas.basUsuario
@{
    ViewBag.Title = "Login";
}

<h2>Faça o Login ou Cadastre-se.</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>basUsuario</legend>
       
        <div class="editor-label">
           @Html.LabelFor(model => model.login)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.login)
            @Html.ValidationMessageFor(model => model.login)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.senha)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.senha)
            @Html.ValidationMessageFor(model => model.senha)
        </div>
        <p>
            <input type="submit" value="Logar" />
        </p>
        
       </fieldset>
}

<div>
    <ul>
        <li>@Html.ActionLink("Volta", "Index")</li>
    </ul>
     <ul>
        <li>@Html.ActionLink("Cadastrar","Index","usuario")</li>
    </ul>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
