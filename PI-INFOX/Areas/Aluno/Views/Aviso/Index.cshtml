@model IEnumerable<PI_INFOX.Models.Basicas.basAviso>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["nomeUsuarioLogado"] != null)
{
    <text>
       <h3> Bem Vindo @Session["nomeUsuarioLogado"].ToString() </h3>
    </text>
}

<div>
    <ul>
        <li>@Html.ActionLink("Criar Novo", "Create")</li>
    </ul>
</div>
<div>
    <ul>
        <li>@Html.ActionLink("Home","Index","home")</li>
    </ul>
</div>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AvisoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.messagemAviso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataPublicacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disciplinas.nomeDisciplina)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AvisoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.messagemAviso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataPublicacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Disciplinas.nomeDisciplina)
        </td>
         <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.AvisoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AvisoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AvisoID })
        </td>
    </tr>
    
    
}

</table>
