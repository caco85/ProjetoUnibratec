@model IEnumerable<PI_INFOX.Models.Basicas.basContato>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Session["nomeUsuarioLogado"] != null)
{
    <text>
       <h3> Bem Vindo @Session["nomeUsuarioLogado"].ToString() </h3>
    </text>
}
<table class="panel panel-primary">
   
        <tr class="panel-heading">
            <td>
                @Html.DisplayNameFor(model => model.ContatoID)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Nome)
            </td>

            <td>
                @Html.DisplayNameFor(model => model.Email)
            </td>
           
        </tr>
   
   
        @foreach (var item in Model)
        {
            <tr class="panel-body">
                <td>
                    @Html.DisplayFor(modelItem => item.ContatoID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>        
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                                <td>
                    @Html.ActionLink("Editar", "Edit", new {  id=item.ContatoID } ,new { @class = "btn btn-info" }) 
                    @Html.ActionLink("Veja Mais aqui", "Details", new { id = item.ContatoID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id=item.ContatoID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
   
</table>