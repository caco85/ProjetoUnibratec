@model PI_INFOX.Models.Basicas.basDisciplina

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Session["nomeUsuarioLogado"] != null)
{
    <text>
       <h3> Bem Vindo ao incluir Disciplina @Session["nomeUsuarioLogado"].ToString() </h3>
    </text>
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Disciplina</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.nomeDisciplina)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nomeDisciplina)
            @Html.ValidationMessageFor(model => model.nomeDisciplina)
        </div>

        <p>
            <input type="submit" value="Criar" class="btn btn-success" />
            @Html.ActionLink("Volta", "Index",null, new {@class="btn btn-info"})
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
