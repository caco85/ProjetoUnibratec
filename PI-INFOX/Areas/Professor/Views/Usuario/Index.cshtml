@model PI_INFOX.Models.Basicas.basUsuario
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["nomeUsuarioLogado"] != null)
{
    <text>
       <h3> Bem Vindo @Session["nomeUsuarioLogado"].ToString() </h3>
    </text>
}


@if (Session["usuarioLogadoID"] != null)
{
  
    var UserID =  Convert.ToInt32(Session["usuarioLogadoID"]) ;

<table class="panel panel-primary">
    <tr class="panel-heading">
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.matricula)
        </th>
        
        <th></th>
    </tr>
    <tr class="panel-body">
        <td>
            @Html.DisplayFor(model => model.UserID)
        </td>
         <td>
            @Html.DisplayFor(model => model.login)
        </td>
        <td>
            @Html.DisplayFor(model => model.email)
        </td>
         <td>
            @Html.DisplayFor(model => model.matricula)
        </td>
      
        <td>

            @Html.ActionLink("Editar", "Edit", new { id = UserID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Veja Mais aqui", "Details", new { id = UserID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id = UserID }, new { @class = "btn btn-danger" })
        </td>
      </tr>


</table>
}  